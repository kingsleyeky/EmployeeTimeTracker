@model List<Employee>

@{
    ViewData["Title"] = "Home Page";

    //string value = "John";
}

<a asp-controller="Home" asp-action="GetEmployeeAttandanceRecord" >See Attandance List</a>

<form method="post" id="timerForm" asp-controller="Home" asp-action="Index">
    @if(Model != null)
    {
        @foreach(var employee in Model)
        {
            @if(employee.Status == EmployeStatus.Working)
            {
              string status = EmployeStatus.Working.ToString();
              
                <button asp-route-employeeName="@employee.Name" asp-route-status="@status" asp-route-id="@employee.Id" style="border:1px solid; background-color:Pink; width: 200px; height:200px">
                    @employee.Name
                </button>   

                <div>Working</div>
            }
            else if(employee.Status == EmployeStatus.Out)
            {
                 string status = EmployeStatus.Out.ToString();
              
                 <button asp-route-employeeName="@employee.Name" asp-route-status="@status" asp-route-id="@employee.Id" style="border:1px solid; background-color:red; width: 200px; height:200px">
                    @employee.Name
                </button>   

                <div>Out</div>

            }
        }
    }
   

    </form>









